<form method="post" action="/songs/<%=@song.slug%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="name">Name: </label><input type="text" name="name" value="<%=@song.name%>" id="name"></p>
  <p><label for="Artist Name">Artist Name: </label><input type="text" name="artist" id="Artist Name" value="<%=@song.artist.name%>"></p>
  <p><label for="genres">Genres: </label>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>" <%if @song.genre_ids.include?(genre.id) %>checked<%end%>><%=genre.name%></input>
  <%end%></p>
  <input type="submit" id="save" value="Save">
</form>
